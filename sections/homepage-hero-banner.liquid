{%- comment -%}
  Homepage Hero Banner - Decade Awards
  Full-width hero with optional text overlay and configurable width
{%- endcomment -%}

{{ 'section-homepage-hero-banner.css' | asset_url | stylesheet_tag }}

<section class="da-hero-banner">
  <div class="da-hero-banner__media">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="{{ section.settings.image | image_url: width: 800 }} 800w,
                {{ section.settings.image | image_url: width: 1200 }} 1200w,
                {{ section.settings.image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image.alt | default: section.settings.heading }}"
        class="da-hero-banner__image"
        loading="eager"
        fetchpriority="high"
      >
    {%- else -%}
      <div class="da-hero-banner__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'da-hero-banner__placeholder-svg' }}
      </div>
    {%- endif -%}
  </div>

  {%- if section.settings.show_text_overlay -%}
    <div class="da-hero-banner__overlay" style="background: rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }});"></div>
  {%- endif -%}

  <div class="da-hero-banner__content da-hero-banner__content--{{ section.settings.text_position }}">
    <div class="da-hero-banner__content-wrapper" style="max-width: {{ section.settings.text_max_width }}px;">
      {%- if section.settings.show_text_overlay -%}
        {%- if section.settings.subheading != blank -%}
          <span class="da-hero-banner__subheading">{{ section.settings.subheading }}</span>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h1 class="da-hero-banner__heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="da-hero-banner__description">{{ section.settings.description }}</p>
        {%- endif -%}
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="da-hero-banner__button">
          {{ section.settings.button_label }}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "header",
      "content": "Text Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_text_overlay",
      "label": "Show text overlay",
      "default": false,
      "info": "Enable to display heading and description on the image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "text_max_width",
      "label": "Text container max width",
      "min": 300,
      "max": 800,
      "step": 50,
      "default": 500,
      "unit": "px",
      "info": "Controls how wide the text area can be"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay darkness",
      "min": 0,
      "max": 70,
      "step": 5,
      "default": 30,
      "unit": "%",
      "info": "Darkens the image behind text for readability"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "show_text_overlay": false,
        "button_label": "Shop All",
        "button_link": "/collections/all"
      }
    }
  ]
}
{% endschema %}
