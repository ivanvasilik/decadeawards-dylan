{% comment %}
  Decade Awards Custom Footer - Refined Professional Design
  Clean, tight spacing, premium feel for an awards company
{% endcomment %}

<footer class="da-footer">
  <!-- Logo Banner -->
  <div class="da-footer__logo-banner">
    <a href="/" class="da-footer__logo-link">
      {%- if settings.logo != blank -%}
        <img src="{{ settings.logo | image_url: width: 450 }}" alt="{{ shop.name }}" loading="lazy">
      {%- elsif section.settings.logo != blank -%}
        <img src="{{ section.settings.logo | image_url: width: 450 }}" alt="{{ shop.name }}" loading="lazy">
      {%- else -%}
        <span class="da-footer__logo-fallback">{{ shop.name }}</span>
      {%- endif -%}
    </a>
  </div>

  <div class="da-footer__main">
    <div class="da-footer__inner">
      <!-- Footer Columns -->
      <div class="da-footer__columns">
        <!-- About Us -->
        <div class="da-footer__column">
          <h3 class="da-footer__heading">About Us</h3>
          <ul class="da-footer__links">
            <li><a href="/pages/about-us">Decade Awards</a></li>
            <li><a href="/pages/our-story">Our Story</a></li>
            <li><a href="/pages/testimonials">Testimonials</a></li>
            <li><a href="/pages/our-mission">Our Mission</a></li>
          </ul>
        </div>

        <!-- Help -->
        <div class="da-footer__column">
          <h3 class="da-footer__heading">Help</h3>
          <ul class="da-footer__links">
            <li><a href="/pages/contact">Contact Us</a></li>
            <li><a href="/pages/terms-conditions">Terms & Conditions</a></li>
            <li><a href="/pages/faq">FAQ's</a></li>
            <li><a href="/pages/shipping-returns">Shipping & Returns</a></li>
            <li><a href="/pages/free-shipping">Free Shipping</a></li>
          </ul>
        </div>

        <!-- Tools -->
        <div class="da-footer__column">
          <h3 class="da-footer__heading">Tools</h3>
          <ul class="da-footer__links">
            <li><a href="/pages/accessibility">Accessibility Statement</a></li>
            <li><a href="/pages/artwork-guidelines">Artwork Guidelines</a></li>
            <li><a href="/pages/design-ideas">Design Ideas</a></li>
            <li><a href="/pages/text-ideas">Text Ideas</a></li>
          </ul>
        </div>

        <!-- Site Info -->
        <div class="da-footer__column">
          <h3 class="da-footer__heading">Site Info</h3>
          <ul class="da-footer__links">
            <li><a href="/account">Account Information</a></li>
            <li><a href="/account">Orders</a></li>
            <li><a href="/cart">View Cart</a></li>
            <li><a href="/pages/return-policy">Return Policy</a></li>
            <li><a href="/collections/all">Fantasy Football Trophies</a></li>
            <li><a href="/collections/all">Last Place - Loser Trophies</a></li>
            <li><a href="/collections/all">Basketball Trophies</a></li>
            <li><a href="/collections/all">Sales Trophies</a></li>
          </ul>
        </div>

        <!-- Newsletter & Contact -->
        <div class="da-footer__column da-footer__column--newsletter">
          <h3 class="da-footer__heading">Subscribe To Our Newsletter</h3>
          <p class="da-footer__subtitle">Get the latest updates on new products and upcoming sales</p>

          {%- form 'customer', class: 'da-footer__newsletter' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="da-footer__newsletter-row">
              <input
                type="email"
                name="contact[email]"
                class="da-footer__input"
                placeholder="Your email address"
                required
                autocomplete="email"
              >
              <button type="submit" class="da-footer__submit" aria-label="Subscribe">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 2L11 13"/>
                  <path d="M22 2L15 22L11 13L2 9L22 2Z"/>
                </svg>
              </button>
            </div>
          {%- endform -%}

          <h4 class="da-footer__connect-heading">Connect With Us</h4>
          <div class="da-footer__social">
            {%- if section.settings.social_facebook != blank -%}
              <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
              </a>
            {%- endif -%}
            {%- if section.settings.social_twitter != blank -%}
              <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/></svg>
              </a>
            {%- endif -%}
            {%- if section.settings.social_youtube != blank -%}
              <a href="{{ section.settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02" fill="#fff"/></svg>
              </a>
            {%- endif -%}
            {%- if section.settings.social_instagram != blank -%}
              <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
              </a>
            {%- endif -%}
          </div>

          <div class="da-footer__contact">
            <div class="da-footer__contact-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              <span>Call Us at <a href="tel:509-474-9530">509-474-9530</a></span>
            </div>
            <div class="da-footer__contact-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              <a href="mailto:sales@decadeawards.com">sales@decadeawards.com</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="da-footer__bottom">
    <div class="da-footer__bottom-inner">
      <p class="da-footer__copyright">&copy;{{ 'now' | date: '%Y' }} Decade Awards LLC, All Rights Reserved</p>
      <div class="da-footer__payments">
        <img
          src="{{ 'cards-payments-footer.webp' | asset_url }}"
          alt="We accept American Express, Discover, Mastercard, PayPal, Visa, Google Pay, and Apple Pay"
          width="390"
          height="24"
          loading="lazy"
        >
      </div>
    </div>
  </div>
</footer>

<style>
  /* ===========================================
     DECADE AWARDS FOOTER - Refined Professional
     Clean, tight spacing, premium feel
     =========================================== */

  .da-footer {
    --footer-bg: #f7f7f7;
    --footer-text: #333;
    --footer-heading: #1a1a1a;
    --footer-link: #21477e;
    --footer-link-hover: #15305a;
    --footer-muted: #666;
    --footer-border: #e0e0e0;

    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--footer-bg);
    -webkit-font-smoothing: antialiased;
  }

  /* ---- Logo Banner ---- */
  .da-footer__logo-banner {
    display: flex;
    justify-content: center;
    padding: 1.75rem 1rem 1.5rem;
    background: var(--footer-bg);
  }

  .da-footer__logo-link {
    display: block;
    transition: opacity 0.2s;
  }

  .da-footer__logo-link:hover {
    opacity: 0.85;
  }

  .da-footer__logo-link img {
    max-width: 360px;
    height: auto;
  }

  .da-footer__logo-fallback {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--footer-link);
    letter-spacing: -0.01em;
  }

  /* ---- Main Footer ---- */
  .da-footer__main {
    background: var(--footer-bg);
    padding: 0 1.5rem 1.75rem;
  }

  .da-footer__inner {
    max-width: 1280px;
    margin: 0 auto;
  }

  .da-footer__columns {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1.5fr;
    gap: 1.5rem 2rem;
  }

  .da-footer__column {
    min-width: 0;
  }

  /* ---- Headings ---- */
  .da-footer__heading {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--footer-heading);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  /* ---- Links ---- */
  .da-footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .da-footer__links li {
    margin-bottom: 0;
    line-height: 1.8;
  }

  .da-footer__links a {
    color: #000;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 400;
    line-height: 1.8;
    display: inline-block;
    transition: color 0.15s ease;
  }

  .da-footer__links a:hover {
    color: #333;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  /* ---- Newsletter Column ---- */
  .da-footer__subtitle {
    color: var(--footer-muted);
    font-size: 0.9375rem;
    margin: 0 0 0.625rem;
    line-height: 1.45;
  }

  .da-footer__newsletter-row {
    display: flex;
    margin-bottom: 1.25rem;
  }

  .da-footer__input {
    flex: 1;
    padding: 0.625rem 0.875rem;
    border: 1px solid var(--footer-border);
    border-right: none;
    border-radius: 4px 0 0 4px;
    background: #fff;
    color: var(--footer-text);
    font-size: 0.875rem;
    font-family: inherit;
    min-width: 0;
  }

  .da-footer__input::placeholder {
    color: #999;
  }

  .da-footer__input:focus {
    outline: none;
    border-color: var(--footer-link);
  }

  .da-footer__submit {
    padding: 0.625rem 1rem;
    background: var(--footer-link);
    border: 1px solid var(--footer-link);
    border-radius: 0 4px 4px 0;
    color: #fff;
    cursor: pointer;
    transition: background 0.15s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .da-footer__submit:hover {
    background: var(--footer-link-hover);
    border-color: var(--footer-link-hover);
  }

  .da-footer__connect-heading {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--footer-heading);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.625rem;
  }

  /* ---- Social Icons ---- */
  .da-footer__social {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .da-footer__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    border: 1.5px solid var(--footer-link);
    border-radius: 50%;
    color: var(--footer-link);
    transition: all 0.15s ease;
  }

  .da-footer__social a:hover {
    background: var(--footer-link);
    color: #fff;
    transform: translateY(-1px);
  }

  /* ---- Contact Info ---- */
  .da-footer__contact {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .da-footer__contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--footer-text);
    font-size: 0.9375rem;
  }

  .da-footer__contact-item svg {
    color: var(--footer-muted);
    flex-shrink: 0;
  }

  .da-footer__contact-item a {
    color: var(--footer-link);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .da-footer__contact-item a:hover {
    color: var(--footer-link-hover);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  /* ---- Footer Bottom ---- */
  .da-footer__bottom {
    background: var(--footer-bg);
    border-top: 1px solid var(--footer-border);
  }

  .da-footer__bottom-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .da-footer__copyright {
    color: var(--footer-muted);
    font-size: 0.9375rem;
    margin: 0;
  }

  .da-footer__payments {
    display: flex;
    align-items: center;
  }

  .da-footer__payments img {
    height: 22px;
    width: auto;
  }

  /* ===========================================
     RESPONSIVE BREAKPOINTS
     =========================================== */

  @media (max-width: 1100px) {
    .da-footer__columns {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem 1.25rem;
    }

    .da-footer__column--newsletter {
      grid-column: span 3;
      max-width: 400px;
    }
  }

  @media (max-width: 768px) {
    .da-footer__main {
      padding: 0 1rem 1.5rem;
    }

    .da-footer__columns {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem 1rem;
    }

    .da-footer__column--newsletter {
      grid-column: span 2;
      max-width: none;
    }

    .da-footer__bottom-inner {
      flex-direction: column;
      gap: 0.75rem;
      text-align: center;
      padding: 1rem;
    }
  }

  @media (max-width: 480px) {
    .da-footer__logo-banner {
      padding: 1.25rem 1rem;
    }

    .da-footer__logo-link img {
      max-width: 300px;
    }

    .da-footer__columns {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .da-footer__column--newsletter {
      grid-column: span 1;
    }

    .da-footer__heading {
      font-size: 0.75rem;
      margin-bottom: 0.625rem;
    }

    .da-footer__links a {
      font-size: 0.8125rem;
    }

    .da-footer__social {
      justify-content: flex-start;
    }

    .da-footer__payments img {
      height: 18px;
    }
  }
</style>

{% schema %}
{
  "name": "Decade Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "text",
      "id": "social_facebook",
      "label": "Facebook URL",
      "default": "https://www.facebook.com/DecadeAwards"
    },
    {
      "type": "text",
      "id": "social_twitter",
      "label": "Twitter URL",
      "default": "https://twitter.com/decadeawards"
    },
    {
      "type": "text",
      "id": "social_instagram",
      "label": "Instagram URL",
      "default": "https://www.instagram.com/decade_awards/"
    },
    {
      "type": "text",
      "id": "social_youtube",
      "label": "YouTube URL",
      "default": "https://www.youtube.com/channel/UCEGHvBHJi2FZtSLMUaVxXmw"
    },
    {
      "type": "text",
      "id": "social_linkedin",
      "label": "LinkedIn URL"
    }
  ]
}
{% endschema %}
