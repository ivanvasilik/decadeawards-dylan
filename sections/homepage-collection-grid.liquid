{%- comment -%}
  Homepage Collection Grid - Decade Awards
  Elegant grid of collection tiles with hover effects
{%- endcomment -%}

{{ 'section-homepage-collection-grid.css' | asset_url | stylesheet_tag }}

<section class="da-grid-section" style="background: {{ section.settings.background_color }};">
  <div class="da-grid-section__container">
    {%- if section.settings.heading != blank -%}
      <div class="da-grid-section__header">
        {%- if section.settings.subheading != blank -%}
          <span class="da-grid-section__subheading">{{ section.settings.subheading }}</span>
        {%- endif -%}
        <h2 class="da-grid-section__heading">{{ section.settings.heading }}</h2>
        {%- if section.settings.description != blank -%}
          <p class="da-grid-section__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="da-grid da-grid--{{ section.settings.columns_desktop }}-col">
      {%- for block in section.blocks -%}
        <a
          href="{{ block.settings.link }}"
          class="da-grid__item"
          {{ block.shopify_attributes }}
          style="--item-index: {{ forloop.index }};"
        >
          <div class="da-grid__item-image-wrap">
            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 400 }}"
                srcset="{{ block.settings.image | image_url: width: 200 }} 200w,
                        {{ block.settings.image | image_url: width: 400 }} 400w"
                sizes="(max-width: 749px) 50vw, 200px"
                alt="{{ block.settings.title }}"
                class="da-grid__item-image"
                loading="lazy"
                width="200"
                height="200"
              >
            {%- elsif block.settings.external_image != blank -%}
              <img
                src="{{ block.settings.external_image }}"
                alt="{{ block.settings.title }}"
                class="da-grid__item-image"
                loading="lazy"
                width="200"
                height="200"
              >
            {%- else -%}
              <div class="da-grid__item-placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4zM3 6h18M16 10a4 4 0 01-8 0"/>
                </svg>
              </div>
            {%- endif -%}
            <div class="da-grid__item-overlay"></div>
          </div>
          <div class="da-grid__item-content">
            <h3 class="da-grid__item-title">{{ block.settings.title }}</h3>
            <span class="da-grid__item-cta">
              Shop Now
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </div>
        </a>
      {%- endfor -%}
    </div>

    {%- if section.settings.button_label != blank -%}
      <div class="da-grid-section__footer">
        <a href="{{ section.settings.button_link }}" class="da-grid-section__button">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

