{% comment %}
  Group Order File Upload - Decade Awards (Compact)
  Simple upload button for group orders.
{% endcomment %}

{%- liquid
  assign has_file_upload = product.metafields.custom.has_file_upload.value
  assign has_group_ordering = product.metafields.custom.has_group_ordering.value
-%}

{%- if has_file_upload == true or has_group_ordering == true -%}
  <div class="product-customizer__file-upload">
    <div class="product-customizer__upload-row">
      <input
        type="file"
        id="group-order-file"
        class="product-customizer__file-input"
        accept=".doc,.docx,.xls,.xlsx,.csv,.pdf,.txt"
        data-file-upload
      >
      <input
        type="hidden"
        id="group-order-file-url"
        name="properties[_Group Order File]"
      >

      <label for="group-order-file" class="product-customizer__upload-btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15V19C21 20.1 20.1 21 19 21H5C3.9 21 3 20.1 3 19V15"/>
          <path d="M17 8L12 3L7 8"/>
          <path d="M12 3V15"/>
        </svg>
        Upload Group/Team List
      </label>
      <span class="product-customizer__upload-hint">Word, Excel, CSV</span>
    </div>

    <div class="product-customizer__upload-success" id="upload-success" style="display: none;">
      <svg width="16" height="16" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M16.6667 5L7.50001 14.1667L3.33334 10"/>
      </svg>
      <span id="upload-filename"></span>
      <button type="button" class="product-customizer__remove-file" id="remove-file">Remove</button>
    </div>
  </div>
{%- endif -%}
