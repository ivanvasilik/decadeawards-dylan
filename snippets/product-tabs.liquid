{%- comment -%}
  Product Tabs - Description, Reviews, Videos
  Renders product description in a tabbed section below the main product area
  Styled to match BigCommerce original: tabs INSIDE the container
{%- endcomment -%}

<div class="product-tabs" id="product-tabs">
  {%- comment -%} Outer container with gray background - wraps tabs + content {%- endcomment -%}
  <div class="product-tabs__wrapper">
    {%- comment -%} Tab Navigation {%- endcomment -%}
    <div class="product-tabs__nav" role="tablist">
      <button
        class="product-tabs__tab product-tabs__tab--active"
        data-tab="description"
        aria-selected="true"
        role="tab"
      >
        Description
      </button>
      <button
        class="product-tabs__tab"
        data-tab="reviews"
        aria-selected="false"
        role="tab"
      >
        Reviews
      </button>
      <button
        class="product-tabs__tab"
        data-tab="videos"
        aria-selected="false"
        role="tab"
      >
        Videos
      </button>
    </div>

    {%- comment -%} Tab Content {%- endcomment -%}
    <div class="product-tabs__content">
    {%- comment -%} Description Tab {%- endcomment -%}
    <div class="product-tabs__panel product-tabs__panel--active" data-panel="description" role="tabpanel">
      <div class="product-tabs__panel-inner">
        {%- if product.description != blank -%}
          <div class="product-tabs__description">
            {{ product.description }}
          </div>
        {%- else -%}
          <p class="product-tabs__empty">No description available.</p>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Reviews Tab {%- endcomment -%}
    <div class="product-tabs__panel" data-panel="reviews" role="tabpanel" hidden>
      <div class="product-tabs__panel-inner">
        <div id="product-reviews">
          <p class="product-tabs__empty">No reviews yet. Be the first to review this product!</p>
        </div>
      </div>
    </div>

    {%- comment -%} Videos Tab {%- endcomment -%}
    <div class="product-tabs__panel" data-panel="videos" role="tabpanel" hidden>
      <div class="product-tabs__panel-inner">
        {%- if product.metafields.custom.video_url != blank -%}
          <div class="product-tabs__video">
            {{ product.metafields.custom.video_url | video_tag }}
          </div>
        {%- else -%}
          <p class="product-tabs__empty">No videos available for this product.</p>
        {%- endif -%}
      </div>
    </div>
  </div>
  </div>
</div>

<style>
  .product-tabs {
    margin-top: 3.5rem;
    margin-bottom: 2rem;
  }

  /* Wrapper - gray background containing both tabs and content */
  .product-tabs__wrapper {
    background: #eeeeee;
    border-radius: 12px;
    padding: 2rem;
  }

  /* Tab Navigation - Inside the gray container */
  .product-tabs__nav {
    display: flex;
    gap: 0.625rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e5e5e5;
    margin-bottom: 0;
  }

  /* Tabs - 50% bigger with border radius */
  .product-tabs__tab {
    padding: 1rem 3rem;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    background: transparent;
    color: #333;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .product-tabs__tab:hover {
    background: rgba(154, 40, 44, 0.1);
    color: #9a282c;
  }

  .product-tabs__tab--active {
    background: #9a282c;
    color: #fff;
    border-radius: 6px;
  }

  .product-tabs__tab--active:hover {
    background: #7d2024;
    color: #fff;
  }

  /* Tab Content Area - no extra background, inherits from wrapper */
  .product-tabs__content {
    background: transparent;
    margin-top: 0;
  }

  .product-tabs__panel {
    display: none;
  }

  .product-tabs__panel--active {
    display: block;
  }

  .product-tabs__panel-inner {
    padding: 1.25rem 0 0;
  }

  /* Description body text */
  .product-tabs__description {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 1.2rem;
    line-height: 1.55;
    color: #333;
  }

  /* Paragraphs - consistent vertical spacing */
  .product-tabs__description p {
    margin: 0 0 0.75rem;
  }

  .product-tabs__description p:last-child {
    margin-bottom: 0;
  }

  /* Hide empty paragraphs (caused by &nbsp; in imported HTML) */
  .product-tabs__description p:empty,
  .product-tabs__description p:only-child:empty {
    display: none;
  }

  /* Collapse paragraphs that only contain whitespace or &nbsp; */
  .product-tabs__description br + br {
    display: none;
  }

  /* Headings inside description */
  .product-tabs__description h1 {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  .product-tabs__description h2 {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0.5rem 0 0.75rem;
    line-height: 1.4;
  }

  .product-tabs__description h3 {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 1.3rem;
    font-weight: 700;
    margin: 1rem 0 0.5rem;
    line-height: 1.4;
  }

  /* Specs labels (Engraving:, Size:, etc.) */
  .product-tabs__description strong,
  .product-tabs__description b {
    color: #000;
    font-weight: 600;
  }

  .product-tabs__description ul,
  .product-tabs__description ol {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
    font-size: 1.2rem;
  }

  .product-tabs__description li {
    margin-bottom: 0.375rem;
    font-size: 1.2rem;
    line-height: 1.6;
  }

  /* Footer tagline */
  .product-tabs__footer {
    margin-top: 1.25rem;
    padding-top: 0.75rem;
    border-top: 1px solid #ddd;
    font-size: 0.8125rem;
    color: #555;
    font-style: italic;
  }

  .product-tabs__empty {
    font-size: 0.8125rem;
    color: #666;
    font-style: italic;
  }

  .product-tabs__video {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
  }

  .product-tabs__video iframe,
  .product-tabs__video video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .product-tabs__wrapper {
      padding: 1.25rem;
      border-radius: 10px;
    }

    .product-tabs__nav {
      flex-wrap: wrap;
      gap: 0.375rem;
    }

    .product-tabs__tab {
      padding: 0.75rem 1.5rem;
      font-size: 0.875rem;
      border-radius: 5px;
    }

    .product-tabs__panel-inner {
      padding: 1rem 0 0;
    }

    .product-tabs__description {
      font-size: 0.75rem;
    }

    .product-tabs__description h1 {
      font-size: 0.9375rem;
    }

    .product-tabs__description h2 {
      font-size: 0.8125rem;
    }

    .product-tabs__description h3,
    .product-tabs__description li {
      font-size: 0.75rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.product-tabs__tab');
    const panels = document.querySelectorAll('.product-tabs__panel');

    // Tab switching
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetPanel = tab.dataset.tab;

        // Update tabs
        tabs.forEach(t => {
          t.classList.remove('product-tabs__tab--active');
          t.setAttribute('aria-selected', 'false');
        });
        tab.classList.add('product-tabs__tab--active');
        tab.setAttribute('aria-selected', 'true');

        // Update panels
        panels.forEach(panel => {
          if (panel.dataset.panel === targetPanel) {
            panel.classList.add('product-tabs__panel--active');
            panel.hidden = false;
          } else {
            panel.classList.remove('product-tabs__panel--active');
            panel.hidden = true;
          }
        });
      });
    });

    // Clean up empty paragraphs (caused by &nbsp; in imported HTML)
    const descContainer = document.querySelector('.product-tabs__description');
    if (descContainer) {
      const paragraphs = descContainer.querySelectorAll('p');
      paragraphs.forEach(p => {
        // Check if paragraph only contains whitespace, &nbsp;, or is truly empty
        const text = p.textContent || '';
        const html = p.innerHTML || '';
        if (text.trim() === '' || html === '&nbsp;' || html.trim() === '&nbsp;') {
          p.style.display = 'none';
        }
      });
    }
  });
</script>
